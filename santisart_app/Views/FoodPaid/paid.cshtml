@model IEnumerable<santisart_app.Models.viewPaid>

@{
    ViewData["Title"] = "Paid";
    var listIndex = 0;
}
<style>
     .tile h2 {
        font-size: 30px;
        line-height: 30px;
        margin: 3px 0 7px;
        font-weight: 700;
    }
    .fixed_height_390 {
        height: 293px;
    }
    .progress {
        height: 7px;
        margin-bottom: 16px;
    }
</style>
<h2>Details</h2>
<head>
    
